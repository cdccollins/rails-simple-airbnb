<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>Edit the flat</h2>
    </div>
    <div class="row">
    <div class="col-xs-12 col-sm-10 col-md-8 col-md-offset-2">
      <%= simple_form_for (@flat) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :address %>
        <%= f.input :price_per_night %>
        <%= f.input :number_of_guests %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
  </div>
</div>
