
<div class="map-container">
  <img src="https://maps.googleapis.com/maps/api/staticmap?center=<%= @flat.address %>&size=1000x300" alt="" id="map">
</div>

<div class="container">
  <div class="content">
    <div class="row">
      <div class="col-sm-8">
        <div class="show-card go-up">
          <h1> <%= @flat.name %> </h1>
          <p class="flat-show-address"> <%= @flat.address %> </p>
        </div>
        <div class="show-card description">
          <h4>More about this flat</h4>
          <p> <%= @flat.description %> </p>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="show-card go-up">
          <h5>Book this place</h5>
          <form class="form-horizontal">
            <div class="form-group">
              <label for="from" class="col-sm-2 control-label">From</label>
              <div class="col-sm-10">
                <input type="date" class="form-control" id="from" placeholder="12/12/12">
              </div>
            </div>
            <div class="form-group">
              <label for="to" class="col-sm-2 control-label">To</label>
              <div class="col-sm-10">
                <input type="date" class="form-control" id="to" placeholder="13/12/12">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Book</button>
              </div>
            </div>
          </form>
        </div>
        <div class="show-card">
          <h5>Details</h5>
          <div class="icon-content">
            <div class="icons">
              <i class="fas fa-users"> <%= @flat.number_of_guests %></i>
            </div>
            <div class="icons">
              <i class="fas fa-pound-sign"></i> <%= @flat.price_per_night %>
            </div>
          </div>
        </div>
        <div class="show-card">Share</div>
      </div>
    </div>
  </div>
</div>
